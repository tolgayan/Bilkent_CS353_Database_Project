      <li>
        user id: <%=userData.user_id %>
      </li>
      <li>
        scout name: <%=userData.scout_name %>
      </li>
      <li>
        is available: <%=userData.is_available %>
      </li>
      <li>
        current task id: <%=userData.task_id %>
      </li>
      <li>
        email: <%=userData.email %>
      </li>
    </ul>
    <a href="http://localhost:4000/account/<%=userData.user_id%>/see_tasks/"><button>See Tasks</button></a>
    <a href="search footballer"><button>Search footballer</button></a>
