      </li>
      <li>
        wage budget: <%=userData.wage_budget %>
      </li>
    </ul>
    <% } else if(userData.usertype == "agent") {%>
    <ul>
      <li>
        user id: <%=userData.user_id %>
      </li>
      <li>
