      </li>
      <li>
        email: <%=userData.email %>
      </li>
    </ul>
    <% } else if(userData.usertype == "standard") {%>
    <ul>
      <li>
        user id: <%=userData.user_id %>
      </li>
      <li>
        user name: <%=userData.user_name %>
      </li>
      <li>
        email: <%=userData.email %>
      </li>
    </ul>
    <% } else {%>
    <ul>
      <li>
        user id: <%=userData.user_id %>
      </li>
      <li>
        email: <%=userData.email %>
      </li>
    </ul>
    <% } %> 
